# FireSpread Backend Environment Configuration
# Copy this file to .env and modify as needed

# ================================
# SERVER CONFIGURATION
# ================================

# Environment: development, production, testing
ENVIRONMENT=development

# Enable debug mode (true/false)
DEBUG=true

# Server host and port
HOST=0.0.0.0
PORT=8000

# ================================
# CORS CONFIGURATION
# ================================

# Allowed origins for CORS (comma-separated)
# Add your frontend URLs here
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ================================
# SIMULATION CONFIGURATION
# ================================

# Maximum number of total simulations
MAX_SIMULATIONS=100

# Maximum number of concurrent running simulations
MAX_CONCURRENT_SIMULATIONS=10

# Maximum simulation time in seconds (5 minutes default)
MAX_SIMULATION_TIME=300

# Simulation step interval in seconds
SIMULATION_STEP_INTERVAL=5

# Maximum fire cells per simulation (performance limit)
MAX_FIRE_CELLS_PER_SIMULATION=1000

# Grid resolution for simulation (coordinate units per cell)
GRID_RESOLUTION=0.05

# Spread rate multiplier for visualization scaling
BASE_SPREAD_RATE_MULTIPLIER=0.00001

# ================================
# WEBSOCKET CONFIGURATION
# ================================

# WebSocket heartbeat interval in seconds
WEBSOCKET_HEARTBEAT_INTERVAL=30

# ================================
# LOGGING CONFIGURATION
# ================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log format: json or text
LOG_FORMAT=text

# ================================
# DATABASE CONFIGURATION (Optional)
# ================================

# Database URL for persistent storage
# Uncomment and configure if you want to add database support
# DATABASE_URL=postgresql://user:password@localhost:5432/firespread
# DATABASE_URL=sqlite:///./firespread.db

# ================================
# REDIS CONFIGURATION (Optional)
# ================================

# Redis URL for caching and session management
# Uncomment and configure if you want to add Redis support
# REDIS_URL=redis://localhost:6379/0

# ================================
# PERFORMANCE TUNING
# ================================

# Number of worker processes (for production)
# WORKERS=4

# Worker connections per process
# WORKER_CONNECTIONS=1000

# Keep alive timeout
# KEEP_ALIVE=2

# ================================
# MONITORING (Optional)
# ================================

# Enable Prometheus metrics
# ENABLE_METRICS=false

# Metrics endpoint path
# METRICS_PATH=/metrics

# ================================
# SECURITY (Production)
# ================================

# API Key for authentication (if needed)
# API_KEY=your-secret-api-key

# Secret key for session management
# SECRET_KEY=your-super-secret-key

# Enable HTTPS redirect in production
# FORCE_HTTPS=true

# ================================
# DEVELOPMENT SETTINGS
# ================================

# Auto-reload on code changes (development only)
RELOAD=true

# Enable API documentation endpoints
ENABLE_DOCS=true